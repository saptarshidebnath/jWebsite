<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="JPATest" transaction-type="RESOURCE_LOCAL">
        <!--<class>me.saptarshidebnath.jwebsite.db.entity.page.metainfo.MetaInfo</class>-->
        <!--<class>me.saptarshidebnath.jwebsite.db.entity.page.metainfo.MetaInfoMapping</class>-->
        <!--<class>me.saptarshidebnath.jwebsite.db.entity.page.WebPage</class>-->
        <!--<class>me.saptarshidebnath.jwebsite.db.entity.website.Config</class>-->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.schema-generation.database.action"
                      content="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-database-schemas"
                      content="true"/>
            <property name="javax.persistence.jdbc.driver" content="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.batch-writing" content="JDBC"/>
            <property name="eclipselink.target-database" content="PostgreSQL"/>
            <property name="hibernate.dialect" content="org.hibernate.dialect.PostgreSQL82Dialect"/>
        </properties>
    </persistence-unit>
</persistence>
